{
  "name": "simple-fileserver",
  "version": "1.0.0",
  "description": "Ultra-lightweight static file server using BusyBox httpd in Docker",
  "main": "docker-compose.yml",
  "scripts": {
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "logs": "docker-compose logs -f",
    "build": "docker build -t simple-fileserver .",
    "test": "cucumber-js tests/features --require tests/step-definitions"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lordcraymen/simple-fileserver.git"
  },
  "keywords": [
    "docker",
    "static-files",
    "fileserver",
    "busybox",
    "nginx-proxy-manager",
    "lightweight",
    "http-server"
  ],
  "author": "Florian Patzke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lordcraymen/simple-fileserver/issues"
  },
  "homepage": "https://github.com/lordcraymen/simple-fileserver#readme",
  "engines": {
    "docker": ">=20.0.0",
    "docker-compose": ">=2.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "axios": "^1.12.2",
    "dockerode": "^4.0.9",
    "fs-extra": "^11.3.2"
  }
}
